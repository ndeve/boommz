{% extends "layout.html.twig" %}

{% block title %}{{ comic.title }}, une BD {% if comic.author %}de {{ comic.author.username }}{% endif %} - BOOMMZ!{% endblock title %}
{% block metas %}
    {% if comic.screen %}
        <meta property="og:image"
              content="https://boommz.com/{{ comic.urlScreen }}fb-{{ comic.rewritten }}-{{ comic.id }}.png"/>
    {% endif %}
{% endblock metas %}

{% block breadcrumb %}
    <nav class="breadcrumb is-centered" aria-label="breadcrumbs">
        <ul>
            <li>
                <a href="{{ url('homepage') }}">
                    <span class="icon is-small">{% include "/svg/home.html.twig" %}</span>
                    <span>BOOMMZ!</span>
                </a>
            </li>
            <li><a href="{{ url('comics') }}">Toutes les BDs</a></li>
            <li class="is-active" aria-current="page"><a href="#">{{ comic.title }}</a></li>
        </ul>
    </nav>
{% endblock %}

{% block body %}

    <h1 class="title">{{ comic.title }}</h1>
    {% if comic.author %}
        <h2 class="subtitle"><img src="{{ comic.author.avatar.urlHead }}"/> de {{ comic.author.username }}</h2>
    {% endif %}
    {% if app.user and comic.author and comic.author.id == app.user.id %}
        <a href="{{ url('comic_edit', comic.routeParams) }}" class="button is-primary is-outlined is-small edit-comic">
            <span class="icon is-small fa-2x">
              {% include "svg/comic_edit.html.twig" %}
            </span>
            <span>Edite ta BD</span>
        </a>
    {% endif %}
    {% for page in comic.pages %}
        <section class="page">
            {% if page.title %}<h2 class="subtitle">{{ page.title }}</h2>{% endif %}
            <div class="columns is-multiline">

                {% for box in page.boxes %}
                    <div class="column is-{{ box.size ?? 'one-quarter' }} {{ cycle(['c-1', 'c-2', ''], loop.index0) }} h-{{ box.height }}">
                        <div {% if box.background %}style="background-image: url({{ box.background }})"{% endif %}
                             class="ccolumn">
                            {% for bubble in box.bubbles %}
                                <blockquote
                                        class="{{ bubble.classes }} b-{{ loop.index0 }}">
                                    {{ bubble.text }}
                                    {% if bubble.persona %}
                                        <footer><img src="{{ bubble.persona.url }}" alt="{{ bubble.persona.name }}"/>
                                        </footer>
                                    {% endif %}
                                </blockquote>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endfor %}

    {% if comic.screen %}
        <a href="https://boommz.com/{{ comic.urlScreen }}{{ comic.rewritten }}-{{ comic.id }}.png"
           target="_blank">Image</a>
    {% endif %}

    {% if comic.author %}
        <br/>
        <h2 class="title is-4">Les autres BDs de {{ comic.author.username }}</h2>
        <section class="page">
            <div class="columns is-multiline">
                {% for comic in comic.author.comics %}
                    {% include "comic/block.html.twig" with {'small': 1, 'author': 0} %}
                {% endfor %}
            </div>
        </section>
    {% endif %}

{% endblock body %}
