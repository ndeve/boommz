{% extends "layout.html.twig" %}

{% block title %}{{ comic.title }} - Boumz!{% endblock title %}
{% block og_image %}{% if comic.imageUrl %}{{ comic.imageUrl('share') }}{% endif %}{% endblock og_image %}
{% block metas %}
{% if url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) != url('comic', comic.routeParams) %}
    <link rel="canonical" href="{{ url('comic', comic.routeParams) }}" />
{% endif %}
<meta name="twitter:card" content="summary_large_image">
{% endblock metas %}

{% block body %}
<div class="row title">
    <h1 class="col-xs-7">{{ comic.title }}</h1>
    <div class="col-xs-5 text-right">
        <a href="https://www.facebook.com/sharer/sharer.php?u={{ url('comic', comic.routeParams) }}" class="connect share facebook">
            <b></b><span class="hidden-xs">{% trans %}Share{% endtrans %}</span>
        </a>
        <a href="https://twitter.com/home?status={{ url('comic', comic.routeParams) }} Powered by @BoumzComics" class="connect share twitter">
            <b></b><span class="hidden-xs">{% trans %}Tweet{% endtrans %}</span>
        </a>
        <a href="https://plus.google.com/share?url={{ url('comic', comic.routeParams) }}" class="connect share gplus"><b></b></a>
        <a href="http://pinterest.com/pin/create/button/?url={{ url('comic', comic.routeParams) }}&media={{ comic.imageUrl }}&description={{ comic.title }}. {{ comic.user.username }} a créé une bd." class="connect share pinterest"><b></b></a>
    </div>
</div>

<div class="row comic" data-cloze-success="">
    {% for box in comic.boxes %}
        {% include 'BoumzBoumzBundle:Comic:box.html.twig' %}
    {% endfor %}
</div>


<div class="row bottom">
    <div class="col-md-8">

        <div class="block infos">
            <div class="comment">
                <img src="{{ comic.user.pictureUrl(50) }}" class="u" />
                <div class="clearfix">
                    {% trans with {'%date%': comic.datePublication|localizeddate('full', 'none')} %}Published on %date%{% endtrans %}
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <a href="" class="embed" data-title="{% trans %}Share{% endtrans %}">{% trans %}Share{% endtrans %}</a> |
                    {% if app.user and comic.user and app.user.id == comic.user.id %}
                        <a href="">Edit</a>
                    {% else %}
                        <a href="" class="report">{% trans %}Report{% endtrans %}</a>
                    {% endif %}

                </div>

                <div class="col-md-6 vote">
                </div>
            </div>

        </div>
        
        {% if app.session.flashbag.has('report') %}
            <div class="block report">
                <h4>{% trans %}Report this comic{% endtrans %}</h4>
                {% for flashMessage in app.session.flashbag.get('report') %}
                    {{ flashMessage }}
                {% endfor %}
            </div>
        {% endif %}

    </div>
    <div class="col-md-4 text-center">

        <div class="row comics">
        </div>

    </div>
</div>
{% endblock body %}
