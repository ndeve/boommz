{% block bubble_widget %}
    <blockquote
            class="bubble {{ form.vars.value.style }} lv-{{ form.vars.value.level }} {{ (form.vars.id == 'comic_pages_0_boxes_0_bubbles_0') ? 'on' : '' }}"
            id="{{ form.vars.id }}"
            style="">
        <p>
            {{ form_widget(form.text,  { 'attr': { 'placeholder': 'Bla bla bla', 'class': 'fs-s7', 'rows': 1, 'data-min-rows': 1 }}) }}
        </p>
        {{ form_widget(form.x) }}
        {{ form_widget(form.y) }}
        {{ form_widget(form.level, { 'attr': {'class': 'lv'}}) }}
        {{ form_widget(form.persona, {}) }}
        {{ form_widget(form.style) }}
        <footer>
            <img src="{{ form.vars.value.persona.url }}" />
        </footer>
    </blockquote>
{% endblock %}
