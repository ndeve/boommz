{% block bubble_widget %}
    <blockquote
            class="bubble {{ form.vars.value.style }} {{ form.vars.value.orientation ? 'left' : 'right' }} {{ (form.vars.id == 'comic_pages_0_boxes_0_bubbles_0') ? 'on' : '' }}"
            id="{{ form.vars.id }}"
            style="">
        {{ form_widget(form.text,  { 'attr': { 'placeholder': 'Ã‰cris ici', 'class': 'autoExpand fs-18', 'rows': 1, 'data-min-rows': 1 }}) }}
        {{ form_widget(form.x) }}
        {{ form_widget(form.y) }}
        {{ form_widget(form.orientation) }}
        {{ form_widget(form.persona, {}) }}
        {{ form_widget(form.style) }}
        <footer>
            <img src="{{ form.vars.value.persona.url }}" />
            <span class="removeBubble icon is-small">{% include "svg/bubble_remove.html.twig" %}</span>
        </footer>
    </blockquote>
{% endblock %}
