{% block bubble_widget %}
    <blockquote
            class="bubble {{ form.vars.value.orientation ? 'left' : 'right' }}"
            style="">
        {{ form_widget(form.text,  { 'attr': { 'class': 'bubble', 'placeholder': 'Write here !' }}) }}
        {{ form_widget(form.x) }}
        {{ form_widget(form.y) }}
        {{ form_widget(form.orientation) }}
        {{ form_widget(form.persona) }}
        <footer><img src="/persona/stars/donald-trump.png"/></footer>
    </blockquote>
{% endblock %}
